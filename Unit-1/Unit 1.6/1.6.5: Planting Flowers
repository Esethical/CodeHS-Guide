public class KarelProgram extends Karel
{
    public void run()
    {
        putInPosition();
        turnLeft();
        putInPosition();
        makeFlower();
        move();
        turnLeft();
        putInPosition();
        turnLeft();
        move();
        makeFlower();
        putInPosition();
        turnLeft();
        putInPosition();
        turnLeft();
        putInPosition();
        turnLeft();
        putInPosition();
        turnLeft();
        putInPosition();
        turnLeft();
    }
    private void makeFlower()
    {
        putBall();
        move();
        putBall();
        turnRight();
        move();
        putBall();
        turnRight();
        move();
        putBall();
    }
    private void turnRight()
    {
        turnLeft();
        turnLeft();
        turnLeft();
    }
    private void putInPosition()
    {
        move();
        move();
        move();
    }
}
